<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ccet.hp.sportsapplication.RegisterationStudent"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp"
        android:padding="10dp"
        android:id="@+id/tableLayout"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="Student Registration"
            android:textColor="@android:color/background_dark"
            />




        <EditText
            android:id="@+id/name"
            android:layout_width="225dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter name"
            />
        <EditText
            android:id="@+id/roll_no"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Roll no"
          />
        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:hint="Enter Mobile no"
            android:inputType="textPersonName"

            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Enter Email Address"

            />

        <TableRow
            android:layout_margin="10dp"
            android:layout_gravity="center"
            >
            <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester"
            />

            <Spinner
                android:id="@+id/semester"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:entries="@array/semester_entries"
                />
        </TableRow>
        <TableRow
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="Gender"
                />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:entries="@array/gender_entries"/>
        </TableRow>
        <TableRow
            android:layout_margin="10dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="208dp"
                android:layout_height="19dp"
                android:text="Branch"

                />
            <Spinner
                android:id="@+id/branch_spinner"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:entries="@array/branch_entries"
           />


        </TableRow>
        <TableRow
            android:layout_margin="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView789"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Degree/ Diploma"
                />

            <Spinner
                android:id="@+id/collegeTypeSpinner"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:entries="@array/type_entries"
                />
        </TableRow>

        <CheckedTextView
                    android:id="@+id/oathCheck"
                    android:text="@string/oath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:layout_marginBottom="10dp"
                    android:textSize="10dp"
                    android:scrollbars="vertical"
                    android:checked="true"
                    />
        <Button
            android:id="@+id/register_final"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/app_theme_orange"
            android:elevation="7dp"
            android:text="Register"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:textColor="@android:color/white"
            />
        <include
            layout="@layout/emailverification"
            />

    </TableLayout>

</ScrollView>